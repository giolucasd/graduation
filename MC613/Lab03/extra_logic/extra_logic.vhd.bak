library ieee;
use ieee.std_logic_1164.all;

entity extra_logic is
  port(w3, w2, w1, w0 : in std_logic;
       y3, y2, y1, y0 : in std_logic;
       f : out std_logic);
end extra_logic;

architecture rtl of extra_logic is
  signal s : std_logic_vector(3 downto 0);
begin
  s <= x0 & x1 & x2 & x3;
  with s select
    f <= w0 when s = '1000',
         w1 when s = '0100',
         w2 when s = '0010',
	 w3 when s = '0001',
	 '1' when others;
end rtl;

