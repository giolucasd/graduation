LIBRARY ieee;
USE ieee.std_logic_1164.ALL;

LIBRARY Processor;
USE Processor.Processor_pack.ALL;

ENTITY selector IS
    GENERIC (
        WORDSIZE : NATURAL := 32 -- Tamanho da palavra de dados
    );
	PORT (
        instruction:	IN	STD_LOGIC_VECTOR (5 DOWNTO 0);
        data_in, immediate:	IN	STD_LOGIC_VECTOR (WORDSIZE-1 DOWNTO 0);
        B: out STD_LOGIC_VECTOR (WORDSIZE-1 DOWNTO 0);
	);
END ENTITY;

ARCHITECTURE Behavior OF selector IS
begin
    with instruction select
        B <=    immediate when "001100",
                data_in when others;
END ARCHITECTURE;
