LIBRARY ieee;
USE ieee.std_logic_1164.all;
entity bin2dec is
	port (
	      bin: in std_logic_vector(3 downto 0);
	      dec: out std_logic_vector(6 downto 0)
	);
end bin2dec;
ARCHITECTURE logicfunction OF bin2dec IS
BEGIN
    WITH bin SELECT
	dec <= "1111110" WHEN "0000",
	     "0110000" WHEN "0001",
	     "1101101" WHEN "0010",
	     "1111001" WHEN "0011",
	     "0110011" WHEN "0100",
	     "1011011" WHEN "0101",
	     "1011111" WHEN "0110",
	     "1110000" WHEN "0111",
	     "1111111" WHEN "1000",
	     "1111011" WHEN "1001",
	     "1001111" WHEN OTHERS ;
END logicfunction;